
<table>
    <thead>
        <tr>
            <th>name</th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="2"></th>
        </tr>
    </thead>

    <% @posts.each do |post|%>

    <tbody>
        <td>
        <%= link_to post.user.name, user_path(post.user.id) %>
        </td>

        <td>
        <%= link_to post.title, post_path(post.id) %>
        </td>

        <td>
        <%= post.body %>
        </td>

        <td id="favorite-<%= post.id %>">
        <%= render partial: "favorites/favorite", locals: { post: post} %>
        </td>

        <td>
        <span>コメント数: </span><%= post.comments.count %>
        </td>
    </tbody>

    <% end %>

</table>